{% set invoice = args.invoice %}

<div class="paylix-delivery-product skip mb-0 mt-5">
  <div class="paylix-delivery-product-title" style="margin-top: -2rem">
    {{ 'shop.delivery.subscription.title' | t }}
  </div>
  <div class="paylix-delivery-product-item">

    {% if invoice.subtype %}
      <div class="paylix-text">
        <p class="paylix-delivery-product-item-subtype">
          <strong>{{ invoice.subtype | lower }}</strong> {{ 'shop.delivery.subscription.sentToEmail.0' | t }}
          <a href="mailto:notice@orders.paylix.gg" target="_blank">notice@orders.paylix.gg</a> {{ 'shop.delivery.subscription.sentToEmail.1' | t }}
        </p>
      </div>
    {% endif %}

    <div class="paylix-text">
      {% if invoice.subtype %}
        {% render_snippet 'Alert',
          show=true,
          small=true,
          blue=true,
          title=('shop.delivery.subscription.pleaseNote' | t),
          text=('shop.delivery.subscription.note' | t)
        %}
      {% else %}
        <p>
          {{ 'shop.delivery.subscription.return' | t }}
        </p>
      {% endif %}
    </div>

    <div class="paylix-delivery-product-buttons">
      <a href="contact" class="w-50 mr-3 medium primary">
        <button type="button" class="w-100 medium primary">
          {{ 'shop.delivery.subscription.contactMerchant' | t }}
        </button>
      </a>
      <button
        type="button"
        class="w-50 medium primary"
        onclick="window.paylixHelper.redirectToSubLink('', '/customer/auth')"
      >
        {{ 'shop.delivery.subscription.goToPortal' | t }}
      </button>
    </div>
  </div>
</div>
