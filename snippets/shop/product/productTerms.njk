{% set product = global.common.productInfo.product %}
<div id="product-terms-modal" class="paylix-modal terms-modal" style="display:none">
  <div class="paylix-modal-header pb-4 w-100">
    Shop Terms of Service
  </div>

  <div class="paylix-modal-body pb-4">
    <div class="terms-modal-container">
      <div class="paylix-modal-close">
        <i class="fa-light fa-times" style="color: var(--darkFontColor); font-size: 1.25rem;"></i>
      </div>
      {% if product.shop_terms_of_service %}
        <div class="terms-modal-description paylix-text">
          {{ product.shop_terms_of_service | html_sanitize | safe }}
        </div>
        {% if product.terms_of_service %}
          <div class="terms-modal-title">
            Product Terms of Service
          </div>
        {% endif %}
      {% endif %}

      {% if product.terms_of_service %}
        <div class="terms-modal-description paylix-text">
          {{product.terms_of_service | html_sanitize | safe}}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script type='application/javascript'>
  $(document).ready(function() {
    $('#product-terms-modal .paylix-modal-close').on('click', function () {
      $.modal.close();
    });
  });
</script>
