{% set colors = themeProperties.current_colors %}
{% set id = uid() %}

<style>
  .paylix-page-{{ id }} {
  {% if not properties.is_wide %}
    max-width: 1140px;
  {% endif %}
    box-shadow: {{ properties.container_shadow }};
    border-radius: {{ properties.container_border_radius }}rem;
    padding: {{ properties.container_padding }}px;
    margin: {{ 'auto 4rem' if properties.is_wide else 'auto' }};
    margin-bottom: 1rem;
    width: {{ 'auto' if properties.is_wide else '75%' }};
  {% if properties.container_background_color %}
    background: {{ colors[properties.container_background_color] }};
  {% endif %}
  {% if not properties.show_border %}
    border: none;
  {% else %}
    border: 1px solid var(--borderColor);
  {% endif %}
  }
  .paylix-page-{{ id }} h1 {
    width: 100%;
    color: {{ colors[properties.title_font_color] }};
    font-size: {{ properties.title_font_size }}px;
    font-weight: {{ properties.title_font_weight }};
    text-align: {{ properties.title_text_align }};
  }
  .paylix-page-{{ id }} .paylix-page-content {
    width: 100%;
  }
</style>

<div class="paylix-store-screen align-items-start paylix-page-{{ id }}">
  <h1>{{ page.name }}</h1>
  <div class="paylix-page-content">
    {{ page.content | html_sanitize | safe }}
  </div>
</div>
